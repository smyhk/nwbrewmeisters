<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "nwbrewmeisters", root_path, id: "logo" %>

    <!-- this is breaking the header -->
    <%= form_with url: search_path, local: true, method: :get, html: { class: "navbar-form navbar-left" } do |form| %>
      <div class="input-group">
        <%= form.text_field :q, placeholder: "Search", data: { behavior: "autocomplete"}, class: "form-control" %>
        <span class="input-group-btn">
          <%= form.button "Search", class: "btn btn-outline-success" %>
        </span>
      </div>
    <% end %>
    <!-- covers over top of main content -->

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Calender", '#' %></li>
        <li><%= link_to "Recipes", '#' %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "New Article", new_article_path %></li>
              <li><%= link_to "New Recipe", new_recipe_path %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
